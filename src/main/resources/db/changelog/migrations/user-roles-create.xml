<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2024-create-user-roles-ref" author="Sergey Andreychikov">
        <preConditions>
            <not>
                <tableExists tableName="user_roles-ref"/>
            </not>
        </preConditions>
        <createTable tableName="user_roles">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_user_ref_id" references="user_ref(id)"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints foreignKeyName="fk_role_jn_id" references="roles_jn(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>